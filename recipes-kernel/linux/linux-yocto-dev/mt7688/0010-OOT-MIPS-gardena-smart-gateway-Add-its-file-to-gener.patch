From fc0e35c5f3b7175859ccf9acafb3f30b8cd91b29 Mon Sep 17 00:00:00 2001
From: Stefan Roese <sr@denx.de>
Date: Sat, 1 Dec 2018 10:12:23 +0100
Subject: [PATCH] OOT: MIPS: gardena-smart-gateway: Add its file to generate
 FIT image

Signed-off-by: Stefan Roese <sr@denx.de>
---
 gardena_smart_gateway_mt7688.its | 46 ++++++++++++++++++++++++++++++++++++++++
 1 file changed, 46 insertions(+)
 create mode 100644 gardena_smart_gateway_mt7688.its

diff --git a/gardena_smart_gateway_mt7688.its b/gardena_smart_gateway_mt7688.its
new file mode 100644
index 000000000000..4e6248113a0e
--- /dev/null
+++ b/gardena_smart_gateway_mt7688.its
@@ -0,0 +1,46 @@
+/*
+ * Simple U-boot uImage source file containing a single kernel and FDT blob
+ */
+
+/dts-v1/;
+
+/ {
+	description = "Gardena smart-gateway MT7688 image with single Linux kernel and FDT blob";
+	#address-cells = <1>;
+
+	images {
+		kernel@1 {
+			description = "Linux kernel";
+			data = /incbin/("./arch/mips/boot/vmlinux.bin");
+			type = "kernel";
+			arch = "mips";
+			os = "linux";
+			compression = "none";
+			load =  <0x80000000>;
+			entry = <0x80000400>;
+			hash@1 {
+				algo = "sha1";
+			};
+		};
+
+		fdt@1 {
+			description = "Flattened Device Tree blob";
+			data = /incbin/("./arch/mips/boot/dts/ralink/gardena_smart_gateway_mt7688.dtb");
+			type = "flat_dt";
+			arch = "mips";
+			compression = "none";
+			hash@1 {
+				algo = "sha1";
+			};
+		};
+	};
+
+	configurations {
+		default = "conf@1";
+		conf@1 {
+			description = "Boot Linux kernel with FDT blob";
+			kernel = "kernel@1";
+			fdt = "fdt@1";
+		};
+	};
+};
