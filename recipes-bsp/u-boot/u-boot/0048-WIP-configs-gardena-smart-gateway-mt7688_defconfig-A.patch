 CONFIG_CMD_TIME=y
 CONFIG_MTDIDS_DEFAULT="spi-nand0=spi-nand0"
 CONFIG_MTDPARTS_DEFAULT="mtdparts=spi-nand0:-(ubi)"
@@ -46,6 +47,9 @@ CONFIG_SPI_FLASH_STMICRO=y
 CONFIG_SPI_FLASH_WINBOND=y
 CONFIG_SPI_FLASH_XMC=y
