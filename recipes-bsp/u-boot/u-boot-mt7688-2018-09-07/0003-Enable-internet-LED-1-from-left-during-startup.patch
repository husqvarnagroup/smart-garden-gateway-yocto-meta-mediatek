---
 arch/mips/dts/gardena-smart-gateway-mt7688.dts | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/arch/mips/dts/gardena-smart-gateway-mt7688.dts b/arch/mips/dts/gardena-smart-gateway-mt7688.dts
index 56ebe94ad8..f62c2a441b 100644
--- a/arch/mips/dts/gardena-smart-gateway-mt7688.dts
+++ b/arch/mips/dts/gardena-smart-gateway-mt7688.dts
@@ -28,32 +28,37 @@
 		power_blue {
 			label = "smartgw:power:blue";
 			gpios = <&gpio0 18 GPIO_ACTIVE_HIGH>;
-			default-state = "on";
+			default-state = "off";
 		};
 
 		power_green {
 			label = "smartgw:power:green";
 			gpios = <&gpio0 19 GPIO_ACTIVE_HIGH>;
+			default-state = "off";
 		};
 
 		power_red {
 			label = "smartgw:power:red";
 			gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>;
+			default-state = "off";
 		};
 
 		internet_blue {
 			label = "smartgw:internet:blue";
 			gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;
+			default-state = "off";
 		};
 
 		internet_green {
 			label = "smartgw:internet:green";
 			gpios = <&gpio0 27 GPIO_ACTIVE_HIGH>;
+			default-state = "on";
 		};
 
 		internet_red {
 			label = "smartgw:internet:red";
 			gpios = <&gpio0 28 GPIO_ACTIVE_HIGH>;
+			default-state = "off";
 		};
 	};
 
